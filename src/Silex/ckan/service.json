{
    "name": "Ckan",
    "apiVersion": "2",
    "description": "CKAN is a knowledge archive",
    "operations": {
        "GetRevision": {
            "httpMethod": "GET",
            "uri": "3/action/revision_show?id={id}",
            "summary": "Retrieves a revision",
            "responseClass": "GetRevisionOutput",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "Revision reference to retrieve",
                    "required": true
                }
            }
        },
        "GetDatasets": {
            "httpMethod": "GET",
            "uri": "3/action/package_list",
            "summary": "Gets a list of datasets",
            "responseClass": "GetDatasetsOutput"
        },
        "GetDataset": {
            "httpMethod": "GET",
            "uri": "3/action/package_show?id={id}",
            "summary": "Retrieves a dataset",
            "responseClass": "GetDatasetOutput",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "Dataset reference to retrieve",
                    "required": true
                }
            }
        },
        "GetUser": {
            "httpMethod": "GET",
            "uri": "3/action/user_show?id={id}",
            "summary": "Retrieves a user",
            "responseClass": "GetUserOutput",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User ID to retrieve",
                    "required": true
                }
            }
        },
        "GetDatasetCount": {
            "httpMethod": "GET",
            "uri": "util/dataset-count",
            "summary": "Retrieves total number of datasets."
        },
        "GetGroups": {
            "httpMethod": "GET",
            "uri": "3/action/organization_list",
            "summary": "Retrieves a list of groups",
            "responseClass": "GetGroupsOutput"
        },
        "GetGroup": {
            "httpMethod": "GET",
            "uri": "3/action/organization_show?id={id}",
            "summary": "Retrieves a group",
            "responseClass": "GetGroupOutput",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "The id of the group to retrieve",
                    "required": true
                }
            }
        },
        "GetRevisionSinceRevision": {
            "httpMethod": "GET",
            "uri": "search/revision?since_id={revision_id}",
            "summary": "List revisions since revsion id.",
            "responseClass": "GetRevisionsOutput",
            "parameters": {
                "revision_id": {
                    "location": "uri",
                    "description": "The start revision you want to list revsions after",
                    "required": true
                }
            }
        },
        "GetRevisionSinceTime": {
            "httpMethod": "GET",
            "uri": "search/revision?since_time={date_time}",
            "summary": "List revisions since time.",
            "responseClass": "GetRevisionsOutput",
            "parameters": {
                "date_time": {
                    "location": "uri",
                    "description": "Date and time (Y-m-dTH:i:s) you want to list revsions after",
                    "required": true
                }
            }
        },
        "GetIssues": {
            "httpMethod": "GET",
            "uri": "3/action/issue_search",
            "summary": "Gets a list of issues",
            "responseClass": "GetIssuesOutput"
        },
        "PublisherShow": {
            "httpMethod": "GET",
            "uri": "action/publisher_show?id={id}",
            "summary": "Retrieves publisher details",
            "responseClass": "PublisherShowOutput",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "Publisher (group) id",
                    "required": true
                }
            }
        },
        "PackageSearch": {
            "httpMethod": "GET",
            "uri": "action/package_search",
            "summary": "Searches for packages satisfying a given search criteria.\n This action accepts solr search query parameters (details below), and returns a dictionary of results, including dictized datasets that match the search criteria, a search count and also facet information.",
            "responseClass": "PackageSearchResult",
            "parameters": {
                "q": {
                    "location": "query",
                    "description": "The solr query. Optional. Default: \"*:*\"",
                    "required": false
                },
                "fq": {
                    "location": "query",
                    "description": "The facet query passed to SoLR.",
                    "required": false
                }
            }
        },
        "PackageCreate": {
            "httpMethod": "POST",
            "uri": "action/package_create",
            "summary": "Creates a CKAN Package given a JSON package defintion.",
            "responseClass": "CkanApiOutput",
            "parameters": {
                "data": {
                    "location": "body"
                },
                "content-type": {
                    "location": "header",
                    "static": true,
                    "required" : true,
                    "default" : "application/json",
                    "sentAs" : "Content-Type"
                }
            }
        },
        "PackageUpdate": {
            "httpMethod": "POST",
            "uri": "action/package_update",
            "summary": "Updates a CKAN Pacakage.",
            "responseClass": "CkanApiOutput",
            "parameters": {
                "data": {
                    "location": "body"
                },
                "content-type": {
                    "location": "header",
                    "static": true,
                    "required" : true,
                    "default" : "application/json",
                    "sentAs" : "Content-Type"
                }
            }
        },
        "PackageDelete": {
            "httpMethod": "POST",
            "uri": "action/package_delete",
            "summary": "Deletes a CKAN Pacakage given and Id/Name.",
            "responseClass": "CkanApiOutput",
            "parameters": {
                "id": {
                    "location": "postField"
                }
            }
        },
        "ResourceCreate": {
            "httpMethod": "POST",
            "uri": "action/resource_create",
            "summary": "Creates a CKAN resource and associates it with a package",
            "responseClass": "CkanApiOutput",
            "parameters": {
                "data": {
                    "location": "body"
                },
                "content-type": {
                    "location": "header",
                    "static": true,
                    "required" : true,
                    "default" : "application/json",
                    "sentAs" : "Content-Type"
                }
            }
        },
        "ResourceSearch":{
            "httpMethod": "GET",
            "uri": "action/resource_search",
            "summary": "Search for a ckan resource.",
            "response_class":"CkanApiOutput",
            "parameters": {
                "query":{
                    "location": "query"
                },
                "order_by":{
                    "location": "query"
                },
                "offset":{
                    "location": "query"
                },
                "limit":{
                    "location":"query"
                }
            }
        },
        "ResourceUpdate": {
            "httpMethod": "post",
            "uri": "action/resource_update",
            "summary": "Update a ckan resource.",
            "response_class":"CkanApiOutput",
            "parameters": {
                "data":{
                    "location": "body"
                },
                "content-type": {
                    "location": "header",
                    "static": true,
                    "required" : true,
                    "default" : "application/json",
                    "sentAs" : "Content-Type"
                }
            }
        }
    },

    "models": {
        "PublisherShowOutput": {
            "type": "object",
            "properties": {
                "id": {
                    "location": "json",
                    "type": "string"
                }
            }
        },
        "GetRevisionsOutput": {
            "type": "object"
        },
        "GetRevisionOutput": {
            "type": "object",
            "properties": {
                "help": {
                    "location": "json",
                    "type": "string"
                },
                "success": {
                    "location": "json",
                    "type": "string"
                },
                "result": {
                    "location": "json",
                    "type": "object"
                }
            }
        },
        "GetDatasetsOutput": {
            "type": "object",
            "properties": {
                "datasets": {
                    "description": "List of datasets as a JSON document",
                    "type": "string",
                    "location": "json"
                }
            }
        },
        "GetDatasetOutput": {
            "type": "object",
            "properties": {
                "help": {
                    "location": "json",
                    "type": "string"
                },
                "success": {
                    "location": "json",
                    "type": "string"
                },
                "result": {
                    "location": "json",
                    "type": "object"
                }
            }
        },
        "GetIssuesOutput": {
            "type": "object",
            "properties": {
                "issues": {
                    "description": "List of issues as a JSON document",
                    "type": "string",
                    "location": "json"
                }
            }
        },
        "GetUserOutput": {
            "type": "object",
            "properties": {
                "help": {
                    "location": "json",
                    "type": "string"
                },
                "success": {
                    "location": "json",
                    "type": "string"
                },
                "result": {
                    "location": "json",
                    "type": "object"
                }
            }
        },

        "GetGroupsOutput": {
            "type": "object",
            "properties": {
                "groups": {
                    "description": "List of all groups on CKAN",
                    "location": "json",
                    "type": "string"
                }
            }
        },
 	    "GetRevisionsOutput": {
            "type": "object",
            "properties": {
                "id": {
                    "location": "json",
                    "type": "string"
                }
            }
        },
        "GetGroupOutput": {
            "type": "object",
            "properties": {
                "group_id": {
                    "location": "json",
                    "type": "string"
                }
            }
        },
        "PackageSearchResult": {
            "type": "object",
            "properties": {
                "help": {
                    "location": "json",
                    "type": "string"
                },
                "success": {
                    "location": "json",
                    "type": "boolean"
                },
                "result": {
                    "count": {
                        "location": "json",
                        "type": "int"
                    },
                    "results": {
                        "location": "json",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "owner_org": {
                                    "type": "string"
                                },
                                "resources": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "CkanPackage": {
            "type": "object",
            "properties": {
                "name": {
                    "type" : "string"
                },
                "title": {
                    "type" : "string"
                },
                "owner_org": {
                    "type" : "string"
                },
                "license_id": {
                    "type" : "string"
                },
                "notes": {
                    "type" : "string"
                },
                "tags": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type" : "string"
                        }
                    }
                },
                "extras": {
                    "type": "object",
                    "properties": {
                        "key": {
                            "type" : "string"
                        },
                        "value": {
                            "type" : "string"
                        }
                    }
                }

            }
        },
        "CkanApiOutput":{
            "type": "object",
            "properties": {
                "help": {
                    "type": "string",
                    "location": "json"
                },
                "success": {
                    "type": "boolean",
                    "location": "json"
                },
                "result":{
                    "type": "object",
                    "location": "json"
                }
            }
        },
        "CkanResource": {
            "type": "object",
            "properties": {
                "package_id": {
                    "type" : "string"
                },
                "date": {
                    "type" : "string"
                },
                "description": {
                    "type" : "string"
                },
                "url": {
                    "type" : "string"
                },
                "format": {
                    "type" : "string"
                }
            }
        }
    }
}
